<?xml version="1.0" ?>
<IKSolverDemoConfig>

  <IKsolver Name="IKSolverDemo">   <!-- Motion solver definition -->
    <MaxIt>50</MaxIt>
    <MaxStep>0.2</MaxStep>
  </IKsolver>

  <IKProblem Name="IKSolverDemoProblem"> <!-- Problem definition -->


    <Scene Name="IKSolverDemoScene"> <!-- Kinematic scene -->
      <Kinematica>
        <Root><Limb Segment="base"/></Root>
        <Joints>
          lwr_arm_0_joint,lwr_arm_1_joint,lwr_arm_2_joint,lwr_arm_3_joint,lwr_arm_4_joint,lwr_arm_5_joint,lwr_arm_6_joint
        </Joints>
      </Kinematica>
      <PlanningMode>Optimization</PlanningMode>
    </Scene>

    <Maps>
      <EffPosition Name="IKSolverDemoMap">
        <Scene>IKSolverDemoScene</Scene>
        <EndEffector>
            <Limb Segment="lwr_arm_6_link" />
            <Limb Segment="lwr_arm_6_link">
              <Frame>0.0, 0.0, 0.5, 0.0, 0.0, 0.0, 1.0</Frame>
            </Limb>
        </EndEffector>
      </EffPosition>
    </Maps>

    <Tasks>
      <TaskSqrError Name="IKSolverDemoTask">
        <Map>IKSolverDemoMap</Map>
        <Rho>1e2</Rho>
        <Goal>0.4 -0.1 0.5 0.4 -0.1 0.5 0.4 -0.1 0.5 </Goal>
      </TaskSqrError>
    </Tasks>


    <!-- Problem parameters: tolerance and per joint weighting -->
    <Tolerance>1e-5</Tolerance>
    <W> 7, 6, 5, 4, 3, 2, 1</W>
  </IKProblem>

</IKSolverDemoConfig>
